# Application settings
APP_NAME=pdf-ocr-service
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Typhoon OCR API
TYPHOON_API_KEY=your_typhoon_api_key_here
TYPHOON_API_URL=https://api.opentyphoon.ai/v1/ocr
TYPHOON_RATE_LIMIT=2  # requests per second

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pdf_ocr_db

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File storage
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Webhook settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_COUNT=3
